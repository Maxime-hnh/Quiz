{# templates/category/index.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
{% endblock %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="w-screen flex flex-col justify-center items-center font-mono">
        <h1 class="text-3xl font-semibold">Liste des catégories</h1>

        <div class="mt-10 w-screen px-8">
            <ul class="grid grid-cols-4 w-screen">
                {% for category in categories %}
                    <li>
                        <div>
                        {{ category.name }}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}